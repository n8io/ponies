extends _layouts/master/_

append body-content
  md-content
    table.width-100pct
      thead
        tr
          th
          th
          th
          th
      tbody
        tr(data-ng-repeat='track in mc.tracks')
          td(colspan='4')
            table.width-100pct.track
              tbody
                tr(data-ng-click='track.hide = !track.hide').cursor-pointer
                  td.track
                    span {{track.name}}
                    .float-right
                      span(data-ng-show='track.hide')
                        i.fa.fa-angle-double-down
                      span(data-ng-hide='track.hide')
                        i.fa.fa-angle-double-up
                tr(data-ng-repeat='race in track.races', data-ng-hide='track.hide')
                  td
                    table.width-100pct
                      tbody
                        tr
                          td.race
                            span Race {{race.id}}
                        tr(data-ng-repeat='wager in race.wagers')
                          td.wager
                            gravatar(email='wager.email', size='20', round).valign-mid
                            span.lh-20 &nbsp;{{wager.displayAmt}} {{wager.type}} - {{wager.selections}}
                            .float-right.text-muted {{'#' + wager.id}}
    pre.code {{mc.tracks | json}}
