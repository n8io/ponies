extends _layouts/master/_

append body-content
  md-content
    table.width-100pct
      thead
        tr
          th
          th
          th
          th
      tbody
        tr(data-ng-repeat='track in mc.tracks')
          td(colspan='4')
            table.width-100pct.track
              tbody
                tr
                  td.track
                    span {{track.name}}
                tr(data-ng-repeat='race in track.races')
                  td
                    table.width-100pct
                      tbody
                        tr
                          td.race
                            span Race {{race.id}}
                        tr(data-ng-repeat='wager in race.wagers')
                          td.wager
                            gravatar(email='wager.email', size='20', round).valign-mid
                            span.lh-20 &nbsp;{{'#' + wager.id}} - {{wager.displayAmount}} {{wager.type}} - {{wager.selections}}

    pre.code {{mc.tracks | json}}
